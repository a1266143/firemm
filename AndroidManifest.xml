<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.nhfls"
    android:versionCode="1"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    <!-- 系统启动权限 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- 申请获取wifi状态的权限 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 申请获取网络状态的权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 屏幕锁屏亮屏权限 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- ********************百度百通权限******************** -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:name="com.jiuwu.application.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar"
        tools:ignore="NewApi" >
        <activity
            android:name="com.jiuwu.nhfls.MainActivity"
            android:label="@string/app_name"
            android:process=":main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主服务 -->
        <service
            android:name="com.jiuwu.service.MainService"
            android:process=":push" >
            <intent-filter
                android:priority="1000"
                android:process=":push" >
                <action android:name="com.example.startService" />
            </intent-filter>
        </service>

        <!-- 广播接收器 -->
        <receiver
            android:name="com.jiuwu.receiver.MainBroadCastReceiver"
            android:process=":push" >
            <intent-filter android:priority="1000" >

                <!-- 电量变化 -->
                <action android:name="android.intent.action.BATTERY_CHANGED" />
                <!-- 系统启动action -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <!-- 数据连接状态改变 -->
                <action android:name="android.intent.action.DATA_STATE" />
                <!-- 网络状态改变 -->
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />

                <!-- wifi状态改变 -->
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
                <!-- wifi状态改变了 -->
                <action android:name="android.net.wifi.STATE_CHANGE" />
                <action android:name="android.intent.action.PACKAGE_RESTARTED" />
            </intent-filter>
            <intent-filter>

                <!-- 解除锁屏 -->
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>

        <activity android:name="com.jiuwu.nhfls.ImageActivity" >
        </activity>

        <!-- ******************百度百通广告相关组件***************** -->
        <activity
            android:name="com.baidu.ops.appunion.sdk.activity.AppListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.baidu.ops.appunion.sdk.activity.WebActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <service
            android:name="com.baidu.ops.appunion.sdk.service.AppUnionService"
            android:exported="false"
            android:label="AppUnionService" />

        <meta-data
            android:name="BDAPPUNIONSDK_APIKEY"
            android:value="110022b" />
        <!-- ******************************************************* -->

        <activity
            android:name="com.jiuwu.nhfls.PlayActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:launchMode="singleTask" >
        </activity>

        <!-- *******************优酷sdk相关***************** -->
        <meta-data
            android:name="client_id"
            android:value="02b97cb39f025d2c" />
        <meta-data
            android:name="client_secret"
            android:value="95f1a1723a5cf900a74b3a8292641d47" />

        <activity
            android:name="com.jiuwu.nhfls.SetActivity"
            android:label="@string/title_activity_set" >
        </activity>
    </application>

</manifest>
